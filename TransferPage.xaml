<Page
    x:Class="LandSecure.TransferPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LandSecure"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">
    <ScrollViewer>
        <Grid Padding="40">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Margin="0,0,0,20"
                FontSize="32"
                FontWeight="Bold"
                Text="Transfer of Title" />

            <!--  Progress Bar  -->
            <StackPanel Grid.Row="1" Margin="0,0,0,30">
                <TextBlock
                    x:Name="StepIndicator"
                    Margin="0,0,0,10"
                    FontSize="16"
                    Text="Step 1 of 4: Property Details" />
                <ProgressBar
                    x:Name="ProgressBar"
                    Height="10"
                    Maximum="100"
                    Value="25" />
            </StackPanel>

            <Grid Grid.Row="2">

                <!--  Step 1: Property Details  -->
                <StackPanel x:Name="Step1Panel" Visibility="Visible">
                    <TextBlock
                        Margin="0,0,0,20"
                        FontSize="24"
                        FontWeight="Bold"
                        Text="Property Identification" />

                    <TextBox
                        x:Name="PropertyIdBox"
                        Margin="0,0,0,15"
                        Header="Property ID*"
                        PlaceholderText="Enter property ID"
                        Text="{Binding PropertyId, Mode=TwoWay}" />

                    <TextBox
                        x:Name="LocationBox"
                        Margin="0,0,0,15"
                        Header="Location*"
                        PlaceholderText="Enter location"
                        Text="{Binding Location, Mode=TwoWay}" />

                    <ComboBox
                        Margin="0,0,0,15"
                        Header="Property Type*"
                        SelectedItem="{Binding PropertyType, Mode=TwoWay}">
                        <ComboBoxItem Content="Residential" />
                        <ComboBoxItem Content="Commercial" />
                        <ComboBoxItem Content="Agricultural" />
                    </ComboBox>

                    <TextBox
                        Margin="0,0,0,15"
                        Header="Size (Acres)"
                        PlaceholderText="Enter size"
                        Text="{Binding Size, Mode=TwoWay}" />
                </StackPanel>

                <!--  Step 2: Owner Details  -->
                <StackPanel x:Name="Step2Panel" Visibility="Collapsed">
                    <TextBlock
                        Margin="0,0,0,20"
                        FontSize="24"
                        FontWeight="Bold"
                        Text="Owner Information" />

                    <TextBox
                        x:Name="OwnerNameBox"
                        Margin="0,0,0,15"
                        Header="Owner Name*"
                        PlaceholderText="Full legal name"
                        Text="{Binding OwnerName, Mode=TwoWay}" />

                    <TextBox
                        x:Name="identification"
                        Margin="0,0,0,15"
                        Header="National ID*"
                        PlaceholderText="Enter ID number"
                        Text="{Binding NationalId, Mode=TwoWay}" />

                    <TextBox
                        x:Name="contactinfo"
                        Margin="0,0,0,15"
                        Header="Phone Number*"
                        PlaceholderText="+256 XXX XXX XXX"
                        Text="{Binding Contact, Mode=TwoWay}" />

                    <TextBox
                        x:Name="emailaddress"
                        Margin="0,0,0,15"
                        Header="Email"
                        PlaceholderText="owner@example.com"
                        Text="{Binding Email, Mode=TwoWay}" />
                </StackPanel>



                <!--  new owner details  -->
                <StackPanel x:Name="Step3Panel" Visibility="Collapsed">
                    <TextBlock
                        Margin="0,0,0,20"
                        FontSize="24"
                        FontWeight="Bold"
                        Text="New Owner Information" />

                    <TextBox
                        x:Name="NewOwnerNameBox"
                        Margin="0,0,0,15"
                        Header="Owner Name*"
                        PlaceholderText="Full legal name"
                        Text="{Binding OwnerName, Mode=TwoWay}" />

                    <TextBox
                        x:Name="Newidentification"
                        Margin="0,0,0,15"
                        Header="National ID*"
                        PlaceholderText="Enter ID number"
                        Text="{Binding NationalId, Mode=TwoWay}" />

                    <TextBox
                        x:Name="contact"
                        Margin="0,0,0,15"
                        Header="Phone Number*"
                        PlaceholderText="+256 XXX XXX XXX"
                        Text="{Binding Contact, Mode=TwoWay}" />

                    <TextBox
                        x:Name="email"
                        Margin="0,0,0,15"
                        Header="Email"
                        PlaceholderText="owner@example.com"
                        Text="{Binding Email, Mode=TwoWay}" />
                </StackPanel>


                <!--  Step 3: Document Upload  -->
                <StackPanel x:Name="Step4Panel" Visibility="Collapsed">
                    <TextBlock
                        Margin="0,0,0,20"
                        FontSize="24"
                        FontWeight="Bold"
                        Text="Upload Documents" />

                    <TextBlock Margin="0,0,0,15" Text="Please upload the following documents:" />

                    <Button
                        Margin="0,0,0,10"
                        HorizontalAlignment="Left"
                        Content="📎 Upload Title Deed" />
                    <TextBlock
                        x:Name="TitleDeedStatus"
                        Margin="0,0,0,20"
                        Foreground="Gray"
                        Text="No file selected" />

                    <Button
                        Margin="0,0,0,10"
                        HorizontalAlignment="Left"
                        Content="📎 Upload ID Copy" />
                    <TextBlock
                        x:Name="IdCopyStatus"
                        Margin="0,0,0,20"
                        Foreground="Gray"
                        Text="No file selected" />

                    <TextBox
                        Height="100"
                        Margin="0,0,0,15"
                        AcceptsReturn="True"
                        Header="Additional Notes"
                        PlaceholderText="Any additional information..."
                        Text="{Binding Notes, Mode=TwoWay}"
                        TextWrapping="Wrap" />
                </StackPanel>
            </Grid>

            <!--  Navigation Buttons  -->
            <StackPanel
                Grid.Row="3"
                Margin="0,30,0,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    x:Name="BackBtn"
                    Width="100"
                    Margin="0,0,10,0"
                    Content="Back"
                    Visibility="Collapsed" Click="backbtn" />
                <Button
                    x:Name="NextBtn"
                    Width="100"
                    Click="nextbtn"
                    Content="Next" />
            </StackPanel>

        </Grid>
    </ScrollViewer>



</Page>
