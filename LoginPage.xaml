<Page
    x:Class="LandSecure.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LandSecure"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/landunsplash.jpg" Stretch="UniformToFill" />
        </Grid.Background>


        <StackPanel
            Width="400"
            Height="500"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="White"
            BorderBrush="Black"
            BorderThickness="1"
            CornerRadius="10"
            Orientation="Vertical">

            <TextBlock
                Margin="0,50,0,0"
                HorizontalAlignment="Center"
                FontSize="30"
                FontWeight="Bold"
                Foreground="#3338A0"
                Text="Welcome Back!" />

            <TextBox
                x:Name="usrname"
                Width="200"
                Margin="0,90,0,0"
                PlaceholderText="User Name" />
            <PasswordBox
                x:Name="pwd"
                Width="200"
                Margin="25"
                PlaceholderText="Password" />

            <Button
                Width="100"
                Margin="10"
                HorizontalAlignment="Center"
                Background="#3338A0"
                BorderBrush="Black"
                BorderThickness="2"
                Content="Login"
                CornerRadius="3"
                FontSize="20"
                Foreground="White" />

            <TextBlock
                Margin="20,30,0,0"
                HorizontalAlignment="Center"
                FontSize="15"
                Foreground="Black"
                Text="Don't have an account?" />
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="15"
                Foreground="Black"
                Text="Forgot Password" />
        </StackPanel>





    </Grid>
</Page>
