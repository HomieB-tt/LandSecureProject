<Page
    x:Class="LandSecure.SignUpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LandSecure"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid Background="White">


        <StackPanel
            Width="700"
            Height="500"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            BorderBrush="Black"
            BorderThickness="1"
            CornerRadius="2"
            Orientation="Horizontal">

            <Image
                Width="350"
                Height="550"
                Margin="0,10,0,10"
                HorizontalAlignment="Center"
                Source="/Assets/landunsplash.jpg" />


            <StackPanel Width="300">
                <TextBlock
                    Margin="0,50,0,0"
                    HorizontalAlignment="Center"
                    FontSize="30"
                    FontWeight="Bold"
                    Foreground="Black"
                    Text="Welcome" />

                <TextBlock
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    FontSize="15"
                    Text="Create your account" />
                <TextBox Width="200" Text="First Name" />
                <TextBox Width="200" Text="Last Name" />

                <TextBox
                    x:Name="usrname"
                    Width="200"
                    Margin="0,20,0,0"
                    PlaceholderText="User Name" />
                <PasswordBox
                    x:Name="pwd"
                    Width="200"
                    Margin="25"
                    PlaceholderText="Password" />

                <PasswordBox
                    x:Name="confirmpwd"
                    Width="200"
                    Margin="25"
                    PlaceholderText="Confirm Password" />

                <Button
                    Width="100"
                    Margin="10"
                    HorizontalAlignment="Center"
                    Background="White"
                    BorderBrush="Black"
                    BorderThickness="2"
                    Content="Signup"
                    CornerRadius="3"
                    FontSize="20"
                    Foreground="Black" />
            </StackPanel>

        </StackPanel>


    </Grid>
</Page>
