<Page
    x:Class="LandSecure.SignUpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LandSecure"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="/Assets/landunsplash.jpg" 
                        Stretch="UniformToFill" />
        </Grid.Background>

        <StackPanel
            Width="350"
            Height="600"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            BorderBrush="Black"
            BorderThickness="1"
            CornerRadius="10"
            Orientation="Vertical"
            Background="white"
            >

       
                <TextBlock
                    Margin="0,50,0,0"
                    HorizontalAlignment="Center"
                    FontSize="30"
                    FontWeight="Bold"
                    Foreground="#3338A0"
                    Text="Welcome" 
                    
                    />

                <TextBlock
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    FontSize="15"
                    Text="Create your account" />
            
            
                <TextBox Width="200"
                         Text="First Name" 
                         CornerRadius="5"
                         Height="50"
                         Margin="10"
                         />
                <TextBox Width="200" 
                         Text="Last Name"
                         CornerRadius="5"
                            Height="50"
                            Margin="10"
                         />

                <TextBox
                    x:Name="usrname"
                    Width="200"
                    PlaceholderText="User Name"
                    CornerRadius="5"
                    Height="50"
                    Margin="10"
                    />
            
            
                <PasswordBox
                    x:Name="pwd"
                    Width="200"
                CornerRadius="5"
                Height="50"
                Margin="10"
                    PlaceholderText="Password" />

                <PasswordBox
                    x:Name="confirmpwd"
                    Width="200"
                    CornerRadius="5"
                    Height="50"
                    Margin="10"
                    PlaceholderText="Confirm Password" />

                <Button
                    Width="100"
                    Margin="10"
                    HorizontalAlignment="Center"
                    Background="#3338A0"
                    BorderBrush="Black"
                    BorderThickness="2"
                    Content="Signup"
                    CornerRadius="3"
                    FontSize="20"
                    Foreground="white" />
            </StackPanel>

    


    </Grid>
</Page>
