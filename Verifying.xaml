<Page
    x:Class="LandSecure.Verifying"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LandSecure"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <ScrollViewer
        Foreground="Black"
        >
        <Grid Padding="40"
              Background="White"
              
              >

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Margin="0,0,0,20"
                FontSize="32"
                FontWeight="Bold"
                Text="Document Verification" />

            <!--  Progress Bar  -->
            <StackPanel Grid.Row="1" Margin="0,0,0,30"
                         BorderBrush="Black"
                         BorderThickness="2"
                         CornerRadius="5"
                         Width="800"
                         Height="100"
                        
                        >
                <TextBlock
                    x:Name="StepIndicator"
                    Margin="0,0,0,10"
                    FontSize="16"
                    Text="Step 1 of 3: Property Details" />
                <ProgressBar
                    x:Name="ProgressBar"
                    Height="10"
                    Maximum="100"
                    Value="33" />
            </StackPanel>

            <Grid Grid.Row="2">

                <!--  Step 1: Property Details  -->
                <StackPanel x:Name="Step1Panel" Visibility="Visible"
                            BorderBrush="Black"
                            BorderThickness="2"
                            CornerRadius="5"
                            Width="800"
                            >
                    <TextBlock
                        Margin="0,0,0,20"
                        FontSize="24"
                        FontWeight="Bold"
                        Text="Property Identification" />

                    <TextBox
                        x:Name="PropertyIdBox"
                        Margin="0,0,0,15"
                        Header="Property ID*"
                        PlaceholderText="Enter property ID"
                        Text="{Binding PropertyId, Mode=TwoWay}" 
                        TextChanged="PropertyIdBox_TextChanged" 
                        Width="600"
                        CornerRadius="5"
                        Background="White"
                        PlaceholderForeground="Black"
                        BorderBrush="Black"
                        />

                    <TextBox
                        x:Name="LocationBox"
                        Margin="0,0,0,15"
                        Header="Location*"
                        PlaceholderText="Enter location"
                        Text="{Binding Location, Mode=TwoWay}"
                          Width="600"
                          CornerRadius="5"
                          Background="White"
                          PlaceholderForeground="Black"
                          BorderBrush="Black"
                        />

                    <ComboBox
                        Margin="100,0,0,15"
                        Header="Property Type*"
                        Background="White"
                        BorderBrush="Black"
                        Foreground="Black"
                        SelectedItem="{Binding PropertyType, Mode=TwoWay}">
                        <ComboBoxItem Content="Residential" />
                        <ComboBoxItem Content="Commercial" />
                        <ComboBoxItem Content="Agricultural" />
                    </ComboBox>

                    <TextBox
                        Margin="0,0,0,15"
                        Header="Size (Acres)"
                        PlaceholderText="Enter size"
                          Width="600"
                          CornerRadius="5"
                          Background="White"
                          PlaceholderForeground="Black"
                          BorderBrush="Black"
                        Text="{Binding Size, Mode=TwoWay}" />
                </StackPanel>

                <!--  Step 2: Owner Details  -->
                <StackPanel x:Name="Step2Panel" Visibility="Collapsed">
                    <TextBlock
                        Margin="0,0,0,20"
                        FontSize="24"
                        FontWeight="Bold"
                        Text="Owner Information" />

                    <TextBox
                        x:Name="OwnerNameBox"
                        Margin="0,0,0,15"
                        Header="Owner Name*"
                        PlaceholderText="Full legal name"
                        Text="{Binding OwnerName, Mode=TwoWay}" />

                    <TextBox
                        x:Name="identification"
                        Margin="0,0,0,15"
                        Header="National ID*"
                        PlaceholderText="Enter ID number"
                        Text="{Binding NationalId, Mode=TwoWay}" />

                    <TextBox
                        x:Name="contactinfo"
                        Margin="0,0,0,15"
                        Header="Phone Number*"
                        PlaceholderText="+256 XXX XXX XXX"
                        Text="{Binding Contact, Mode=TwoWay}" />

                    <TextBox
                        x:Name="emailaddress"
                        Margin="0,0,0,15"
                        Header="Email"
                        PlaceholderText="owner@example.com"
                        Text="{Binding Email, Mode=TwoWay}" />
                </StackPanel>

                <!--  Step 3: Document Upload  -->
                <StackPanel x:Name="Step3Panel" Visibility="Collapsed">
                    <TextBlock
                        Margin="0,0,0,20"
                        FontSize="24"
                        FontWeight="Bold"
                        Text="Upload Documents" />

                    <TextBlock Margin="0,0,0,15" Text="Please upload the following documents:" />

                    <Button
                        Margin="0,0,0,10"
                        HorizontalAlignment="Left"
                        Content=" Upload Title Deed" />
                    <TextBlock
                        x:Name="TitleDeedStatus"
                        Margin="0,0,0,20"
                        Foreground="Gray"
                        Text="No file selected" />

                    <Button
                        Margin="0,0,0,10"
                        HorizontalAlignment="Left"
                        Content="Upload ID Copy" />
                    <TextBlock
                        x:Name="IdCopyStatus"
                        Margin="0,0,0,20"
                        Foreground="Gray"
                        Text="No file selected" />

                    <Button
                        Width="60"
                        Height="60"
                        Margin="0,0,0,10"
                        HorizontalAlignment="Left"
                        CornerRadius="5">
                        <StackPanel Width="60" Height="60">
                            <Image Source="/Assets/fingerprint.svg" Stretch="UniformToFill" />
                        </StackPanel>
                    </Button>
                    <TextBlock
                        Margin="0,0,0,20"
                        Foreground="Gray"
                        Text="Scan Fingerprint" />

                    <TextBox
                        Height="100"
                        Margin="0,0,0,15"
                        AcceptsReturn="True"
                        Header="Additional Notes"
                        PlaceholderText="Any additional information..."
                        Text="{Binding Notes, Mode=TwoWay}"
                        TextWrapping="Wrap" />
                </StackPanel>
            </Grid>

            <!--  Navigation Buttons  -->
            <StackPanel
                Grid.Row="3"
                Margin="0,30,0,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    x:Name="BackBtn"
                    Width="100"
                    Margin="0,0,10,0"
                    Click="backbtn"
                    Content="Back"
                    Visibility="Collapsed" />
                <Button
                    x:Name="NextBtn"
                    Width="100"
                    Click="nextbtn"
                    Content="Next" />
            </StackPanel>

        </Grid>
    </ScrollViewer>



</Page>