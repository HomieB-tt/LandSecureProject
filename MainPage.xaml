<Page
    x:Class="LandSecure.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LandSecure"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <Style x:Key="nav" TargetType="NavigationView">
            <Setter Property="Margin" Value="10,0,0,0" />
        </Style>
    </Page.Resources>


    <Grid>

        <NavigationView
            x:Name="NavView"
            Background="White"
            Foreground="Black"
            IsBackButtonVisible="Collapsed"
            ItemInvoked="NavView_ItemInvoked">

            <NavigationView.MenuItems>

                <StackPanel
                    Width="200"
                    Height="50"
                    Margin="20,0,0,0"
                    Padding="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <SymbolIcon Symbol="OtherUser" />
                    <TextBlock
                        Height="30"
                        Margin="3,0,0,0"
                        FontSize="20"
                        Text="Welcome User" />
                </StackPanel>


                <NavigationViewItem
                    Content="Home"
                    IsSelected="True"
                    Tag="HomePage">
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="Home" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Content="Verify Documents" Tag="VerifyPage">
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="Accept" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Content="Search Land" Tag="SearchLandPage">
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="Find" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Content="Transfer Titles" Tag="TransferLandPage">
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="Switch" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <!--  Move the "Lawyers" item here, since FooterMenuItems is not supported in WinUI/UWP XAML  -->
                <NavigationViewItem Content="Lawyers" Tag="LawyersPage">
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="Contact" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <Frame x:Name="ContentFrame" />

        </NavigationView>
    </Grid>
</Page>
